<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:orderingFromXml="true" >

    <PreferenceCategory
        android:orderingFromXml="true"
        android:title="@string/pref_appearance" >
        <ListPreference
            android:defaultValue="@string/pref_theme_default"
            android:dialogTitle="@string/pref_theme"
            android:entries="@array/pref_theme_entries"
            android:entryValues="@array/pref_theme_values"
            android:key="@string/pref_theme"
            android:title="@string/pref_theme" />
        <ListPreference
            android:defaultValue="@string/pref_text_size_default"
            android:dialogTitle="@string/pref_text_size"
            android:entries="@array/pref_text_size_entries"
            android:entryValues="@array/pref_text_size_values"
            android:key="@string/pref_text_size"
            android:title="@string/pref_text_size" />
    </PreferenceCategory>
    <PreferenceCategory
        android:orderingFromXml="true"
        android:title="@string/pref_updating" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_incremental_updating"
            android:summaryOff="@string/pref_incremental_summary_off"
            android:summaryOn="@string/pref_incremental_summary_on"
            android:title="@string/pref_incremental_updating" />
    </PreferenceCategory>
    <PreferenceCategory
        android:orderingFromXml="true"
        android:title="@string/pref_behavior" >
        <ListPreference
            android:defaultValue="@string/pref_orientation_default"
            android:dialogTitle="@string/pref_orientation"
            android:entries="@array/pref_orientation_entries"
            android:entryValues="@array/pref_orientation_values"
            android:key="@string/pref_orientation"
            android:title="@string/pref_orientation" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_wake_lock"
            android:title="@string/pref_wake_lock" />
        <ListPreference
            android:defaultValue="@string/pref_loc_default"
            android:dialogTitle="@string/pref_loc"
            android:entries="@array/pref_loc_entries"
            android:entryValues="@array/pref_loc_values"
            android:key="@string/pref_loc"
            android:title="@string/pref_loc" />
    </PreferenceCategory>

</PreferenceScreen>