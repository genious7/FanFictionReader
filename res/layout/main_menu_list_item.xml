<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/top_bottom_padding"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/top_bottom_padding" >

    <ImageView
        android:id="@android:id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/menu_button_content_description"
        android:maxHeight="@dimen/main_menu_icon_size"
        android:maxWidth="@dimen/main_menu_icon_size"
        android:minHeight="@dimen/main_menu_icon_size"
        android:minWidth="@dimen/main_menu_icon_size"
        android:paddingEnd="@dimen/main_menu_icon_padding"
        android:paddingLeft="0dp"
        android:paddingRight="@dimen/main_menu_icon_padding"
        android:paddingStart="0dp"
        android:src="@drawable/ic_storage"
        android:tint="?android:attr/textColorPrimary"
        android:tintMode="src_in" />

    <TextView
        android:id="@android:id/text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/main_menu_icon_size"
        android:text="@string/menu_button_my_library"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/menu_title_text_size"
        android:textStyle="bold" />

</LinearLayout>